<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewlistItem"
        android:src="@drawable/mango"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/noteTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewlistItem"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yes this is a very good note title, are u happy with it"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/noteBody"
        android:layout_below="@id/noteTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewlistItem"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price: "
        android:id="@+id/PriceVariable"
        android:layout_below="@+id/noteBody"
        android:layout_alignStart="@+id/noteBody"
        android:layout_marginTop="15dp"
        android:layout_alignBottom="@id/imageViewlistItem"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/priceValue"
        android:textSize="19sp"
        android:layout_alignTop="@+id/PriceVariable"
        android:layout_toEndOf="@+id/PriceVariable" />


</RelativeLayout>
