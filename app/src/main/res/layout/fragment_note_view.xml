<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.example.ibrahim_01.notebookapp.NoteViewFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewNoteIcon"
        android:src="@drawable/mango"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NoteScrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ViewNoteIcon"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note Title"
        android:id="@+id/ViewNoteTitle"
        android:layout_alignParentTop="true"
         />




    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: Rs."
        android:id="@+id/PriceVariableForDetailView"
        android:layout_alignBottom="@+id/ViewNoteIcon"
        android:layout_toEndOf="@+id/ViewNoteIcon"
        android:textSize="20sp"
        android:textColor="#d3702e" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PriceValueForDetailView"
        android:layout_alignBottom="@+id/ViewNoteIcon"
        android:layout_toEndOf="@+id/PriceVariableForDetailView"
        android:textSize="22sp" />





    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ViewNoteIcon"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/addtocartBtn">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text  "
            android:id="@+id/ViewNoteMessage"
            android:textSize="18sp"
            android:textColor="#000000"


            />






    </ScrollView>

    <Button
        android:text="add to cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="109dp"
        android:layout_marginTop="15dp"
        android:id="@+id/addtocarBtn" />


</RelativeLayout>
